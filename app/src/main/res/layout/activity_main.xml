<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="false"
    android:focusable="false"
    android:weightSum="1"
    android:orientation="vertical">




    <LinearLayout
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_width="fill_parent"
            android:layout_weight=".135"
            android:layout_height="wrap_content"
            android:id="@+id/edit_calc_string"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:cursorVisible="false"
            android:layout_alignParentEnd="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_clear"
        android:layout_weight=".135"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:text="@string/clear"
            android:id="@+id/button_clear"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/button_backspace" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="&lt;="
            android:id="@+id/button_backspace"
            android:layout_below="@+id/edit_calc_string"
            android:layout_alignRight="@+id/edit_calc_string"
            android:layout_alignEnd="@+id/edit_calc_string" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_clear"
            android:layout_weight=".135"
            android:id="@+id/linearLayout"
            android:weightSum="1"
            android:layout_alignRight="@+id/gridLayout"
            android:layout_alignEnd="@+id/gridLayout">

            <Button
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="("
                android:id="@+id/button_open_bkt"
                android:layout_below="@+id/button_clear"
                android:layout_alignRight="@+id/button_clear"
                android:layout_alignEnd="@+id/button_clear" />

            <Button
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=")"
                android:id="@+id/button_close_bkt"
                android:layout_alignTop="@+id/button_open_bkt"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".135"
            android:id="@+id/linearLayout"
            android:weightSum="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/button_seven"
                android:layout_row="0"
                android:layout_column="0"
                android:longClickable="false"
                android:singleLine="false" />

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/button_eight"
                android:layout_row="0"
                android:layout_column="1" />

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/button_nine"
                android:layout_row="0"
                android:layout_column="2" />

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/button_divide"
                android:layout_row="0"
                android:layout_column="3" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".135"
                android:id="@+id/linearLayout"
                android:weightSum="1"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/button_four"
                android:layout_row="1"
                android:layout_column="0" />

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/button_five"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/button_six"
                android:layout_row="1"
                android:layout_column="2" />

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="*"
                android:id="@+id/button_multiply"
                android:layout_row="1"
                android:layout_column="3" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".135"
            android:id="@+id/linearLayout"
            android:weightSum="1"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">


            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/button_one"
                android:layout_row="2"
                android:layout_column="0" />

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/button_two"
                android:layout_row="2"
                android:layout_column="1" />

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/button_three"
                android:layout_row="2"
                android:layout_column="2" />

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/button_subtract"
                android:layout_row="2"
                android:layout_column="3" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_clear"
            android:layout_weight=".135"
            android:id="@+id/linearLayout"
            android:weightSum="1"
            android:layout_alignRight="@+id/gridLayout"
            android:layout_alignEnd="@+id/gridLayout">

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/button_point"
                android:layout_row="3"
                android:layout_column="0" />

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/button_zero"
                android:layout_row="3"
                android:layout_column="1" />

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/button_equal"
                android:layout_row="3"
                android:layout_column="2" />

            <Button
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/button_addition"
                android:layout_row="3"
                android:layout_column="3" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
